<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bmb.bookdetailspage">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="image" Aspect="AspectFit" />
            <Label x:Name="title" VerticalOptions="Center"/>
            <Label x:Name="Author" VerticalOptions="Center"/>
            <Label x:Name="Summary" VerticalOptions="Center"/>
            <Button Text="Purchase Me!!!" Clicked="OnButtonClicked" VerticalOptions="Center" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>